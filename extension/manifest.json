{
  "manifest_version": 3,
  "name": "Owlculus Evidence Collector",
  "version": "1.0.0",
  "description": "Capture and send web page content to Owlculus case management system",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["http://localhost:8000/*", "https://*/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/owl-icon-16.png",
      "48": "icons/owl-icon-48.png",
      "128": "icons/owl-icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/owl-icon-16.png",
    "48": "icons/owl-icon-48.png",
    "128": "icons/owl-icon-128.png"
  }
}
